\frametitle{Bản thiết kế thuật toán (Pseudocode)}
\begin{lstlisting}[language=C++, basicstyle=\small\ttfamily]
NHAP y;

LAP VO TAN (while true):
    y = y + 1; // Tang nam len 1

    // Tach so
    a = y / 1000;
    b = (y / 100) % 10;
    c = (y / 10) % 10;
    d = y % 10;

    // Kiem tra tat ca cac cap
    NEU (a!=b VA a!=c VA a!=d VA
         b!=c VA b!=d VA
         c!=d):
        IN ra y;
        DUNG vong lap (break);
    KET THUC NEU
KET THUC LAP
\end{lstlisting}
